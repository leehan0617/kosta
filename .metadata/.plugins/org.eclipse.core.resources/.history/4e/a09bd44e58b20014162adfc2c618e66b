package quiz02;

/*
 * 10부터 20까지의 합을 구하여 화면상에 나타내는 프로그램을 작성하시오.
(for문, while문, do-while문을 이용하여 3가지 프로그램 하시오.)

 */
public class quiz20 {
	public static void main(String[] args) {
		int forSum=0,whileSum=0,doWhileSum=0;
		for(int i=10;i<=20;i++){
			forSum +=i;
		}
		System.out.println("for문 sum="+forSum);
		
		int i=10;
		while(i<=20){
			whileSum += i;
			i ++;
		}
		System.out.println("while문 sum="+whileSum);
		
		int j=10;
		do{
			doWhileSum += j;
			
		}while(j<=20);
	}

}
