package quiz02;

import java.io.IOException;

/*
 * 영문자 하나를 입력 받아서 대소문자로 변환하세요.
 */
public class quiz8 {
	public static void main(String[] args) throws IOException {
		char ch =' '; // A = 65 Z=90 a =97 z=122
		System.out.print("input character:");
		ch=(char)System.in.read();
		
		if(ch>=65 && ch <=90){
			ch =ch + (char)32;
		}
		
		
	}

}
