package quiz02;

import java.util.Scanner;

/*
 * 다음은 사칙연산 프로그램이다.아래의 출력화면 보고 프로그램을 작성하세요.
[출력화면]
수를 입력하세요:10
부호를 입력하세요(+, -, *, /) :+
수를 입력하세요:20
10+20=30
수를 입력하세요:10
부호를 입력하세요(+, -, *, /) :&
수를 입력하세요:20
수를 입력하세요:10
부호를 입력하세요(+, -, *, /) :-
수를 입력하세요:20
10-20=-10

 */
public class quiz22 {
	int plus(int input1,int input2){
		return input1+input2;
	}
	int minus(int input1,int input2){
		return input1-input2;
	}
	int mul(int input1,int input2){
		return input1*input2;
	}
	float div(int input1,int input2){
		return (float)input1/input2;
	}
	void print(){
		System.out.println("수를 입력하세요:");
	}
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int input1,input2;
		String str;
		int result=0;
		float divResult=0;
		System.out.print("수를 입력하세요:");
		input1 = scan.nextInt();
		System.out.print("부호를 입력하세요(+,-,*,/):");
		str = scan.next();
		System.out.println("수를 입력하세요:");
		input2 = scan.nextInt();
		
		switch(str){
		case "+":
			result = input1+input2; 
			System.out.println(input1+str+input2+"="+result);
			break;
		case "-":
			result = input1-input2; 
			System.out.println(input1+str+input2+"="+result);
			break;
		case "*":
			result = input1*input2; 
			System.out.println(input1+str+input2+"="+result);
			break;
		case "/":
			divResult = (float)input1/input2; 
			System.out.println(input1+str+input2+"="+divResult);
			break;
		default:
			System.out.print("수를 입력하세요:");
			input1 = scan.nextInt();
			System.out.print("부호를 입력하세요(+,-,*,/):");
			str = scan.next();
			System.out.println("수를 입력하세요:");
			input2 = scan.nextInt();
			
		}
		scan.close();
		
	}

}
